<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.ResultsActivity">

    <TextView
        android:id="@+id/tv_title_available_flights"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="40sp"
        android:fontFamily="@font/alegreya"
        android:text="Available Flights"
        android:gravity="center"
        android:paddingTop="20dp"/>
    <TextView
        android:id="@+id/tv_flight_from_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_title_available_flights"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Leaving from "
        android:layout_margin="20dp" />

    <TextView
        android:id="@+id/tv_quote_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_flight_from_to"
        android:text="Quote 1"
        android:layout_margin="20dp"/>

    <ImageView
        android:id="@+id/iv_logo_one"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_quote_one"
        android:src="@drawable/ic_launcher_background"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/tv_company_name_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/iv_logo_one"
        app:layout_constraintTop_toBottomOf="@id/tv_quote_one"
        android:text="Company Name"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/tv_date_time_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/iv_logo_one"
        app:layout_constraintTop_toBottomOf="@id/tv_company_name_one"
        android:text="Date time"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/tv_directflight_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/iv_logo_one"
        app:layout_constraintTop_toBottomOf="@id/tv_date_time_one"
        android:text="Direct Flight:"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/tv_price_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_company_name_one"
        android:text="$"
        android:layout_marginRight="40dp"
        android:textColor="#00FF00"
        android:layout_marginTop="20dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>